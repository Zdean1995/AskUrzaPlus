<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AskUrzaPlus.Views.AskUrzaPage"
             Title="AskUrzaPage"
             xmlns:viewmodel="clr-namespace:AskUrzaPlus.ViewModels"
             x:DataType="viewmodel:AskUrzaViewModel">
    <VerticalStackLayout>
        <Label
            Text="{Binding AbilityText}"
            />
        <HorizontalStackLayout>
            <Button
                Text="+1"
                Command="{Binding PlusAbilityCommand}"/>
            <Button
                Text="-1"
                Command="{Binding MinusAbilityCommand}"/>
            <Button
                Text="-6"
                Command="{Binding UltAbilityCommand}"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>